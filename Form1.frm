'quitit is a switch to quit the program when the form is clicked or a key is pressed.
Dim quitit As Boolean
'colorchange is an integer that is used in a timer and as a switch to addmore color to the lasershow
Dim colorchange As Integer
Dim i As Integer
'showcursor function is used to turn off the cursor when the show is running and turn it back on when the program ends.
Private Declare Function ShowCursor _
Lib "user32" ( _
    ByVal bShow As Long _
) As Long
Private Sub Form_Click()
'if the form is clicked, quit it
quitit = True
End Sub
Private Sub Form_KeyPress(KeyAscii As Integer)
'if a key is pressed, quit it
quitit = True
End Sub
Private Sub Form_Load()
'start off making sure that the switch to stop the program is not on
quitit = False
'hide the cursor
ShowCursor (False)
'set the integer to 0 for use by the timer
colorchange = 0
'setplace is used as a counter to cycle through the array and set the starting point of each line to the
'center of the screen
Dim setplace As Integer
'make the form the screen width
Form1.Width = Screen.Width
'make the form the screen height
Form1.Height = Screen.Height
'set the top of the form to 0 (so the whole screen is covered)
Form1.Top = 0
'set the left of the form to 0 so the whole screen is covered
Form1.Left = 0
'set the array counter to 0
setplace = 0
'set each line dead center
  While setplace <= 49
    s(setplace).X1 = (Form1.Width / 2) ' - 900
    s(setplace).X2 = (Form1.Width / 2) ' + 900
    s(setplace).Y1 = (Form1.Height / 2)
    s(setplace).Y2 = (Form1.Height / 2)
    setplace = setplace + 1
  Wend
End Sub
Private Sub Timer1_Timer()
'give random colors (mainly blue) & positions to the lines
For i = 0 To Me.s.Count - 1
s(i).X1 = Rnd * 20000
s(i).Y1 = Rnd * 20000
'color change routine below adds more variety to the lasershow
If colorchange = 0 Then Me.s(i).BorderColor = RGB(Rnd * 2569, Rnd * 2560, Rnd * 25)
If colorchange = 1 Then Me.s(i).BorderColor = RGB(Rnd * 1000, Rnd * 1000, Rnd * 100)
If colorchange = 2 Then Me.s(i).BorderColor = RGB(Rnd * 2000, Rnd * 200, RD * 200)
If colorchange = 3 Then Me.s(i).BorderColor = RGB(Rnd * 2569, Rnd * 0, RD * 0)
If colorchange = 4 Then Me.s(i).BorderColor = RGB(Rnd * 0, Rnd * 2569, Rnd * 0)
If colorchange = 5 Then Me.s(i).BorderColor = vbRed
If colorchange = 6 Then Me.s(i).BorderColor = vbYellow
colorchange = colorchange + 1
If colorchange = 6 Then colorchange = 0
Next
End Sub
